# セキュリティ設定
Options -Indexes

# 環境変数設定
# SetEnv DB_PASSWORD "your_db_password_here"
# SetEnv GOOGLE_TTS_API_KEY "your_api_key_here"
# SetEnv GEMINI_API_KEY "your_api_key_here"

# セキュリティヘッダー
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# 機密ファイルへのアクセス拒否
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>